{
  "name": "tool-template",
  "version": "100.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "babel-node --extensions .ts src/index.ts",
    "lint": "npm run typecheck && npm run tslint",
    "tslint": "tslint --project tsconfig.json",
    "typecheck": "tsc --noEmit",
    "test": "jest --coverage --detectOpenHandles --forceExit",
    "build": "rollup"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "tsc --noEmit",
      "tslint -c tslint.json --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-typescript": "^7.1.0",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.4",
    "prettier": "^1.15.1",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.2.2"
  },
  "author": "",
  "license": "MIT"
}
